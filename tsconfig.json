{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "pages",
    "components",
    "lib",
    "hooks",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    // make sure BOTH globs are covered depending on your path
    "bluetubetv-live/polygon-mcp-sidecar/**",
    "polygon-mcp-sidecar/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
